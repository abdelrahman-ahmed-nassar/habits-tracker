{
  "name": "habits-tracker-workspace",
  "version": "1.0.0",
  "description": "Personal habit tracking desktop application",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "node dev-electron.js",
    "build": "node build-electron.js",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "cd frontend && npm run electron:build",
    "pack": "cd frontend && npm run electron:pack",
    "dist": "cd frontend && npm run electron:dist",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm run dev",
    "test:api": "bash test-api.sh",
    "build:exe": "node build-app.js",
    "check-ports": "powershell -ExecutionPolicy Bypass -File check-ports.ps1",
    "update-ports": "node update-ports.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/habits-tracker.git"
  },
  "keywords": [
    "habits",
    "tracker",
    "productivity",
    "electron",
    "react",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
