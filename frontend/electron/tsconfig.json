{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "outDir": "../dist-electron",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "files": ["main.js", "main.cjs", "preload.js"],
  "exclude": ["node_modules", "../dist-electron"]
}
