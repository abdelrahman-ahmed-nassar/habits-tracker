{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "..",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "composite": true,
    "declaration": true
  },
  "include": ["src/**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
